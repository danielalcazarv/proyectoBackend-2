<div class="container mt-3 mb-3 bg-success p-3 d-flex justify-content-between" style="--bs-bg-opacity: .5;">
    <h3>Bienvenida/o {{firstname}} ({{correo}})</h3>
    <a href="/logout" class="btn btn-danger">LOGOUT</a>
</div>
<h3 class="container mt-3 mb-3 ">Vista de Productos</h3>
<div class="align-middle">
<table class="table table-success table-striped container-layout text-center">
    <thead>
        <tr>
        <th scope="col">Código</th>
        <th scope="col">Producto</th>
        <th scope="col">Descripción</th>
        <th scope="col">Precio</th>
        <th scope="col">Foto</th>
        </tr>
    </thead>
    <tbody>
        {{#each api}}
                <tr>
                    <td scope="row">{{this.codigo}}</td>
                    <td>{{this.nombre}}</td>
                    <td>{{this.descripcion}}</td>
                    <td>{{this.precio}}</td>
                    <td>
                        <img src={{this.url}} class="img-thumbnail" style="max-width: 60px ;" alt="Foto de {{this.titulo}}">
                    </td>
                </tr>
        {{/each}}
    </tbody>
</table>
</div>
<div class="container mt-3">
    <a href="/" class="btn btn-success">Ver Centro de Ayuda</a>
</div>